<!DOCTYPE html>
<html>
<head>


    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - STRAK CINEMAS </title>

    <link rel="stylesheet" property="stylesheet" href="/Content/Core.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <style>
        .center {
            margin: auto;
            width: 85%;
            padding: 10px;
        }

        .right {
            position: absolute;
            right: 5px;
            width: 500px;
            padding: 50px;
        }
    </style>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="center">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">

            <a class="navbar-brand" href="#">STARK CINEMA </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="right">
                <div class="collapse navbar-collapse" id="navbarNavDropdown">
                    <ul class="navbar-nav">

                        <li class="nav-item active">
                            @if (Session["email"] == null)
                            {
                                <a class="nav-link" href="/users/Register">Register<span class="sr-only">(current)</span></a>
                            }
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/Index">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item active">
                            <a class="nav-link" href="/Home/Contact">Contact</a>
                        </li>
                        <li class="nav-item active">
                                <a class="nav-link" href="/Home/About">About US</a>
                        </li>
                        <li class="nav-item active">
                            @if (@Session["email"] != null)
                            {
                                if (@Session["UserName"].Equals("Admin"))
                                {
                                    <a class="nav-link" href="/movies/Index">Movies List</a>
                                }
                            }
                        </li>

                        <li class="nav-item active">
                            @if (@Session["email"] != null)
                            {
                                <a class="nav-link"><b> @Session["UserName"] | </b></a>
                            }
                        </li>

                        <li class="nav-item active">
                            @if (Session["email"] == null)
                            {
                                <a class="nav-link" href="/users/Signin">SignIn <span class="sr-only">(current)</span></a>
                            }
                            else
                            {
                                <a class="nav-link" href="/users/Logout">SignOut<span class="sr-only">(current)</span></a>
                            }

                        </li>




                    </ul>

                </div>
   
            </div>

        </nav>
    </div>

